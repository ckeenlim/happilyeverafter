<!-- Start Cart Table -->
	<div class="container">
			<div class="content-40mg">
				<div class="row">
					<div class="col-sm-12 mt40">
						<h3 class="text-center mb20-xs no-margin">Our Wedding Budget</h3>

						<hr style="width:400px;" class="double-hr hidden-xs mt20 mb30">

						<h4> Total Budget: &#8369; 1,000,000.00 </h4> 
						<h4> Booked: &#8369; 700,000.50 </h4>
						<h4> Spent So Far: &#8369; 50,000.50 </h4>
						<div class="table-responsive no-margin" >
							
							<table class="table cart-table table-striped" >
							    <thead >
							    	
							        <tr>
							            <th  class="budget-subheading">Category</th>
							            <th  class="budget-subheading">Cost</th>
							            <th  class="budget-subheading">Amount Paid</th>
							            
							            <th class="total-title budget-subheading">Remaining Balance</th>
							        </tr>
							      
							    </thead><!-- /table header -->  

							    <tbody >
							    		<% @budget_detail_entries.each do |b| %>
							        <tr>
							            <td>
							            	
							            	<%= link_to b.entry_name, category_path(:id => b.category_id) %>
							            	<small class="product-description">48 Layered, Labled .PSD files</small>
							            </td>
							            <td class="cart-price"> &#8369; <%=  number_with_delimiter(b.cost_amt , :delimiter => ',')%></td>
							            <td>
													<input type="text" class="form-control cart-quantity" value="1">
													</td>
										<!--td><a href="#"><span class="fa fa-close bordered-icon-xs"></span></a></td-->
							            <td class="cart-total">&#8369;92.00</td>
							        </tr>
							        <% end %>
							        

							        <tr>
												<td class="subtotal product-description" >Subtotal</td>
												<td class="cart-price">$92.00</td>
												<td class="cart-price">$1367.00</td>
												<td class="cart-total">$1382.00</td>
											</tr>

											<tr>
												<td class="subtotal product-description" >Total</td>
												<td class="cart-price">$92.00</td>
												<td class="cart-price" >$1382.00</td>
												<td class="cart-total">$1382.00</td>

											</tr>
							    </tbody><!-- /table body -->  
							</table><!-- /basic table -->
						</div>
					</div>
					
				</div>
			</div>
			<!-- End Cart Table -->

	</div>