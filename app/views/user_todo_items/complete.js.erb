<% if @user_todo_item.completed? %>
	
	//var htmlToDo = "<div class='completed-todo-item' ><i style = 'opacity: 0.4;' class='fa fa-check'></i> <%= j @user_todo_item.item %> </div>";
	
	//$("#<%= dom_id(@user_todo_item) %> .todoContent").replaceWith(htmlToDo);

	//$("#<%= dom_id(@user_todo_item) %>").appendTo('#completed-items');

	$('#completed-items').append('<%= j render (@user_todo_item)%>');
	$('[data-toggle="tooltip"]').tooltip();   
	
	$('#remaining-items-list #<%= dom_id(@user_todo_item) %>').remove();
	$(".resetIcon").click(function () {
    $(this).parentsUntil('#completed-items').remove();
	});
	var num1 = +$("#user-todo-count").text() - 1;
	var num2 = +$("#user-todo-completed").text() + 1;
	$("#user-todo-count").text(num1);
	$("#user-todo-completed").text(num2);

	var progressStyle = '<div class="progress-bar progress-bar-primary progress-bar-striped active"  role="progressbar" style="width:';
	var progressVal = Math.ceil(num2*100.0/(num1 + num2)); 
	progressStyle += String(progressVal) + "%";
	progressStyle += '"> </div>';
	$(".progress-val").text(String(progressVal) + "%").change();
	$(".progress").html(progressStyle);
<% end %>