<div class="container">


	<div class="col-md-12">
		<div class="pull-right">
			&nbsp;
			&nbsp;

		</div>

		<div class="clearfix">
			&nbsp;

		</div>

		<div class=""col-md-9 col-sm-9 col-xs-9"">
			<h4 class="text-truncated"> <%= @post.title %> </h4>
		</div>

		<div class="clearfix top-border">
			&nbsp;

		</div>

		<div class="panel panel-default">
			<div class="panel-heading">
				<div class="panel-title"> <%= @post.user.email %>
				</div>
			</div>
			<div class="panel-body thread-row">
				<div class="row thread-row">
					<div class="col-md-2 col-sm-3 hidden-xs text-center userblock">
					<br>user photo block
					<br>user photo block
					<br>user photo block
					<br>test
					<br>join date
					<br>wedding date
					<br>test

					</div>

					<div class="col-md-5 col-sm-6 col-xs-8">
						<div class="clearfix hidden-xs"> &nbsp; </div>
						<div class="text-muted">
							<small> 
								<span class="hidden-sm hidden-xs"> Posted: </span>
								<%= @post.created_at %>
							</small>

						</div>
					</div>

					<div class="col-md-10 col-sm-9 col-xs-12">
						<div>
							<div class="clearfix"> &nbsp; </div>
							<p> <%= @post.content %> </p>
							<div class="clearfix"> &nbsp; </div>	
						</div>
					</div>
				</div>
			</div>
		</div>

		<div >
			<div id="comment-list">
			<% @comments.each do |comment| %>
				<%= render 'comments/comment',:comment => comment %>
			<% end %>
			</div>
			<div>
				<%= will_paginate @comments %>
			</div>
		</div>

		
		<% if @comments.total_pages == @comments.current_page %>
			<div>
				<h4> Reply to Thread </h4>
				<div id="comment-form">
					<%= render  'comments/form'%>
				</div>
			</div>
		<% end %>
	</div>	
	
</div>

